root=true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=space
indent_size=2
trim_trailing_whitespace=true

[*.py]
indent_size=4

[{*.jinja,*.html,*.htm}]
indent_style=space
indent_size=2

[*.js,*.js.map]
indent_style=space
indent_size=2

[{*.json,*.xml,*.yml,*.yaml}]
indent_style=space
indent_size=2

[*.svg]
indent_style=space
indent_size=2

